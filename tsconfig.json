{
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "compilerOptions": {
        "target": "ES2022",
        "experimentalDecorators": true,
        "module": "NodeNext",
        "rootDir": "./src",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "newLine": "lf",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationDir": "./dist"
    },
    "exclude": ["src/test.ts"],
    "include": ["src/"]
}
